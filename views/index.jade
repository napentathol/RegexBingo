extends layout

block content
    header.navbar.navbar-inverse.navbar-fixed-top
        div.container
            div.navbar-header
                a.navbar-brand Regex Bingo
            nav.navbar-collapse.collapse
                ul.nav.navbar-nav
                    li
                        a
                            | Welcome {{username}}!
    div.container.regex-container
        div.content
            div.panel.panel-primary
                div.panel-heading
                    | User Information
                div.panel-body
                    div.form-group
                        label.col-sm-2.control-label(for="name") Username:
                        div.col-sm-10
                            div.input-group.input-group-sm
                                input.form-control(type="text", name="name", ng-model="username", ng-init='username="'+username+'"')
                                span.input-group-btn
                                    button.btn.btn-primary(type="button", ng-click="sendUsername()")
                                        | Update